<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:labelFor="@id/smokeLimitAimTextBox"
                android:padding="10dip"
                android:text="@string/smoke_limit_aim" />

            <EditText
                android:id="@+id/smokeLimitAimTextBox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/smokeLimitAimMinLabel"
                android:ems="10"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="10dip" />

            <TextView
                android:id="@+id/smokeLimitAimMinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dip"
                android:text="@string/minutes" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:labelFor="@id/currTimeoutTextBox"
                android:padding="10dip"
                android:text="@string/current_timeout" />

            <EditText
                android:id="@+id/currTimeoutTextBox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/currTimeoutMinLabel"
                android:ems="10"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="10dip" />

            <TextView
                android:id="@+id/currTimeoutMinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dip"
                android:text="@string/minutes" />

        </RelativeLayout>

        <SeekBar
            android:id="@+id/currTimeoutSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:labelFor="@id/increaseTimeoutTextBox"
                android:padding="10dip"
                android:text="@string/increment_timeout" />

            <EditText
                android:id="@+id/increaseTimeoutTextBox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/increaseTimeoutMinLabel"
                android:ems="10"
                android:enabled="false"
                android:importantForAutofill="no"
                android:inputType="number"
                android:padding="10dip" />

            <TextView
                android:id="@+id/increaseTimeoutMinLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="10dip"
                android:text="@string/minutes" />
        </RelativeLayout>

        <SeekBar
            android:id="@+id/increaseTimeoutSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:min="1" />

        <Button
            android:id="@+id/justSmokedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:enabled="false"
            android:text="@string/just_smoked" />

        <EditText
            android:id="@+id/historyList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:ems="10"
            android:enabled="false"
            android:gravity="start|top"
            android:importantForAutofill="no"
            android:inputType="textMultiLine" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>